{
  "expo": {
    "name": "androidApp",
    "slug": "androidApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",

    "userInterfaceStyle": "light",

    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#D32F2F"
    },

    "assetBundlePatterns": ["**/*"],

    "android": {
      "usesCleartextTraffic": true,

      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#D32F2F"
      },

      "statusBar": {
        "backgroundColor": "#D32F2F",
        "barStyle": "light-content"
      }
    }
  }
}